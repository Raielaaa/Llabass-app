<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/white"
    tools:context=".ui.main.opening.OpeningSecondPageFragment">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_250sdp"
                android:src="@drawable/opening_pic_3" />

            <TextView
                android:gravity="center"
                android:id="@+id/textView"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_14ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/carousel_third_page_header" />

            <TextView
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carousel_third_page_subheader" />

            <LinearLayout
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="@dimen/_100sdp"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_4sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="@dimen/_100sdp"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_4sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/main_color"
                    app:cardCornerRadius="@dimen/_100sdp"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_4sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="@dimen/_100sdp"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_4sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="@dimen/_100sdp"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_4sdp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_50sdp">

                <TextView
                    android:id="@+id/tvPrevious"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:background="@drawable/carousel_previous_button_bg"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="@string/carousel_previous_button_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/tvNext"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:background="@drawable/carousel_next_button_bg"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="@string/carousel_next_button_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>