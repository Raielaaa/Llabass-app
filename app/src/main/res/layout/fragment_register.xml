<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.register.RegisterFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/david_libre"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/_30ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="1dp"
        android:background="@color/Theme.color.main"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/david_libre"
        android:text="@string/account_register_header_1"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="@string/account_register_header_2"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/account_login_credentials_input_bg"
        android:drawableStart="@drawable/account_hashtag_resize"
        android:drawablePadding="@dimen/_20sdp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="@string/account_register_lrn"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:textColorHint="@color/Theme.dark.gray"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/etUsername"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/account_login_credentials_input_bg"
        android:drawableStart="@drawable/account_user_resize"
        android:drawablePadding="@dimen/_20sdp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="@string/account_login_username"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:textColorHint="@color/Theme.dark.gray"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <EditText
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/editTextTextPassword"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/account_login_credentials_input_bg"
        android:drawableStart="@drawable/account_password_resize"
        android:drawableEnd="@drawable/account_hide_password_resize"
        android:drawablePadding="@dimen/_20sdp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="@string/account_login_password"
        android:inputType="textPassword"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:textColorHint="@color/Theme.dark.gray"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/etUsername" />

    <EditText
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/editTextTextConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/account_login_credentials_input_bg"
        android:drawableStart="@drawable/account_password_resize"
        android:drawableEnd="@drawable/account_hide_password_resize"
        android:drawablePadding="@dimen/_20sdp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="@string/account_register_confirm_password"
        android:inputType="textPassword"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:textColorHint="@color/Theme.dark.gray"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

    <TextView
        android:id="@+id/tvExistingAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/account_register_existing_account"
        android:textSize="@dimen/_7ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <ImageView
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:id="@+id/ivGoogle"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/google"
        app:layout_constraintBottom_toTopOf="@+id/tvExistingAccount"
        app:layout_constraintEnd_toStartOf="@+id/guideline5" />

    <ImageView
        android:layout_marginStart="@dimen/_15sdp"
        android:id="@+id/ivFacebook"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/facebook"
        app:layout_constraintBottom_toBottomOf="@+id/ivGoogle"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/account_register_header_3"
        app:layout_constraintBottom_toTopOf="@+id/ivGoogle"
        app:layout_constraintEnd_toEndOf="@+id/tvExistingAccount"
        app:layout_constraintStart_toStartOf="@+id/tvExistingAccount" />

    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/black"
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toStartOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/black"
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <Button
        android:layout_marginBottom="@dimen/_20sdp"
        android:textSize="@dimen/_12ssp"
        android:id="@+id/btnSignUp"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:text="@string/account_register_sign_up"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />
</androidx.constraintlayout.widget.ConstraintLayout>